/* pages/components/cal/calendar.wxss */

/* 日历 */

.mask {
  height: 100%;
}

.calendar.hide {
  display: none;
}

.calendar {
  background: #fff;
  /* 弹性盒子布局 */
  display: flex;
  /* 垂直列显示 */
  flex-direction: column;
  /* 让弹性盒元素在必要的时候拆行 */
  flex-wrap: nowrap;
  /* 在弹性盒对象中分布方式 */
  justify-content: flex-end;
  /* 弹性盒的各项对齐方式，此处为拉伸 */
  align-items: stretch;
  width: 100%;
  font-size: 14px;
  background-color: rgba(238, 238, 238, 0.4);
}

.box {
  background-color: #fff;
  flex: 1;
}

.box-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  color: #f9619c;
}

.flex-item {
  box-sizing: 100%;
  flex-flow: nowrap;
  padding: 4rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.item-content {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  height: 100%;
  width: 100%;
  position: relative;
}

.flex-item .item-content .check{
  text-align: center;
  height: 100%;
  width: 100%;
  border-radius:50%; 
  font-size: 24rpx;
  color: #fff;
  background-color: #437ff8;
  position: absolute;
  left: 0;
  top: 0;
}

.hide{
  display: none;
}

.flex-item .item-content .previous, .flex-item .item-content .next {
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}

.flex-item .item-content .previous image, .flex-item .item-content .next image {
  height: 1rem;
  width: 1rem;
}

.flex-item .item-content .previous {
  justify-content: flex-start;
}

.flex-item .item-content .next {
  justify-content: flex-end;
}

.bk-color-day {
  background-color: #f9619c;
  color: #fff;
}

.item-content-current-day {
  flex-grow: 3;
  font-size: 34rpx;
}

.item-content-current-day .item-content {
  font-size: 34rpx;
}

.item-day {
  color: #808080;
  border-radius: 50%;
}

.item-day.week {
  color: #437ff8;
}

.item-day.today {
  color: #fff;
  background-color: #eee;
}

.item-day.today.chooseday, .item-day.chooseday {
  color: #fff;
  background-color: #437ff8;
}

.item-day.firstday {
  border-radius: 50% 0 0 50%;
}

item-day.lastday {
  border-radius: 0 50% 50% 0;
}

.item-day.disable {
  color: #eee;
}

.chooseData {
  padding: 8px 20px 10px 20px;
  display: flex;
  justify-content: space-around;
  background: #fff;
}

.chooseType {
  padding: 20px 20px 0 20px;
  display: flex;
  background: #fff;
  text-align: left;
}

.chooseType view {
  flex: 1;
  padding-left: 10px;
  font-size: 24rpx;
  color: #808080;
}

.chooseData input {
  box-sizing: border-box;
  display: inline-block;
  height: 2rem;
  line-height: 2rem;
  flex: 1;
  margin: 0 10rpx;
  text-align: center;
  border: 2rpx solid #6a9df6;
  border-radius: 0.2rem;
  color: #4d4d4d;
  background: #fff;
  font-size: 24rpx;
}

.chooseData image {
  width: 1.5rem;
  height: 1.5rem;
  margin: 0.25rem 0;
}

.page .box {
  padding: 0 46rpx;
}

.affirm {
  padding: 10px 0 20px 0;
  background: #fff;
}

.affirm button {
  width: 80%;
  margin: 0 auto;
  background-color: #437ff8;
  color: #fff;
  font-size: 34rpx;
}
