/* pages/hotelService/hotelService.wxss */

.hotelService {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: hidden;
}

.head {
  box-sizing: border-box;
  height: 256rpx;
  padding: 30rpx;
  background-color: #333;
  color: #fff;
  font-size: 26rpx;
}

.head .msg{
  min-width: 400rpx;
}

.head .msg>view {
  margin-bottom: 8rpx;
}

.head .msg .addr {
  width:100%;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
}

.head .addr image {
  width: 23rpx;
  height: 28rpx;
  margin-right: 20rpx;
}

.head .addr .changeRoom{
  color: #f8b260;
  position: absolute;
  right: 0;
}

.head .openDoor {
  width: 200rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.head .openDoor image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 15rpx;
}

.option {
  display: flex;
  align-items: center;
  height: 140rpx;
  border-bottom: 1rpx solid #e6e6e6;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #4d4d4d;
}

.option .renew, .option .checkOut {
  flex: 1;
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.option .renew .icon, .option .checkOut .icon{
  width: 90rpx;
  height: 90rpx;
  margin-right: 30rpx;
}

.option .renew .next, .option .checkOut .next{
  width: 10rpx;
  height: 12rpx;
  margin-left: 40rpx;
}


.option .line{
  width: 1rpx;
  height: 100%;
  background-color: #e6e6e6;
}

.control {
  flex: 1;
  height: 100%;
  padding: 0 30rpx;
  color: #4c4c4c;
}

.control .li {
  font-size: 26rpx;
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e6e6e6;
}


.control .li .icon {
  margin-right: 15rpx;
  width: 50rpx;
  display: flex;
  align-items: center;
  align-content: center;
}

.control .li:nth-of-type(1) .icon image{
  width: 40rpx;
  height: 40rpx;
}

.control .li:nth-of-type(2) .icon image{
  width: 40rpx;
  height: 40rpx;
}

.control .li:nth-of-type(3) .icon image{
  width: 45rpx;
  height: 45rpx;
}

.control .li:nth-of-type(4) .icon image{
  width: 35rpx;
  height: 57rpx;
}

.control .li:nth-of-type(5) .icon image{
  width: 41rpx;
  height: 28rpx;
}

.control .li:nth-of-type(6) .icon image{
  width: 38rpx;
  height: 40rpx;
}

.control .li .content {
  flex: 1;
}

.control .li .remind {
  flex: 2;
  width: 100%;
  text-align: right;
  font-size: 22rpx;
  color: #ccc;
}

.control .li .more {
  margin-left: 20rpx;
}

.hotelService .popup{
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 30rpx;
  background-color:rgba(0, 0, 0, 0.7);
}

.hotelService .popup .msg{
  padding: 14rpx 28rpx;
  background-color:#000;
  border-radius: 7rpx;
}