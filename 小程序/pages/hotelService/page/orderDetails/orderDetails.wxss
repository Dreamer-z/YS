/* pages/hotelService/page/orderDetails/orderDetails.wxss */
@import "/pages/components/order/order.wxss";

.pageHead {
  height: 300rpx;
  width: 100%;
  color: #fff;
  background-color: #fc8c2c;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.orderType {
  display: flex;
  align-items: center;
  font-size: 40rpx;
}

.orderType image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 20rpx;
}

.status {
  margin-top: 30rpx;
}

.option {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}

.option button {
  box-sizing: border-box;
  width: 276rpx;
  height: 80rpx;
  font-size: 28rpx;
  outline: none;
  margin: 0 20rpx;
}

.option .back {
  color: #fff;
  border: 1rpx solid #fff;
  background-color: #fc8c2c;
}

.option .checkOrder {
  color: #fc8c2c;
  background-color: #fff;
}

.remind{
  padding: 25rpx;
  color: #fc8c2c;
  text-align: center;
}