/* pages/hotelService/page/renewalsOf/renewalsOf.wxss */

.room{
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.room image{
  height: 155rpx;
  width: 155rpx;
  border-radius: 8rpx;
  margin-right: 50rpx;
}

.room .msg{
  display: flex;
  flex-direction: column;
  align-content: center;
}

.room .msg .msgLi{
	font-size: 26rpx;
	color: #808080;
  margin-bottom: 15rpx;
}

.room .msg .msgLi text{
	color: #333;
}

.room .msg .msgLi.checkInPerson text{
  position: relative;
  padding-right: 30rpx;
}

.room .msg .msgLi.checkInPerson text::after{
  content: "、";
  width: 20rpx;
  text-align: right;
  position: absolute;
  right: 0;
}

.room .msg .msgLi.checkInPerson text:nth-last-of-type(1)::after{
  content: "";
}

.time{
  padding: 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e6e6e6;
}

.time .title{
  font-size: 26rpx;
  color: #808080;
}

.time .place{
  width: 90rpx;
} 

.time .part{
  width: 45%;
  display: flex;
  flex-direction: column;
  align-content: center;
}

.time .part .content{
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  padding: 25rpx;
  border: 1px solid #e6e6e6;
  border-radius: 8rpx;
	color: #b3b3b3;
}

.time .part.checkOut .content{
  border: 1px solid #6b9ef7;
	color: #4d4d4d;
}

.time .part .content image{
  width: 26rpx;
  height: 26rpx;
}

.time .part .content .day{
  width: 100%;
  flex: 1;
}

.time .part .content .day text{
  margin-left: 20rpx;
}

.basePrice{
  padding: 30rpx;
	color: #b3b3b3;
  margin-bottom: 10rpx;
}

.rules{
  padding: 30rpx;
	color: #808080;
}

.rules .content{
  margin-bottom: 50rpx;
}

.rules .agree{
  text-align: center;
}

.renewals{
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  border-radius: 0;
	background-color: #437ff8;
	font-size: 34rpx;
	color: #fff;
  position: fixed;
  bottom: 0;
  z-index: 7;
}

.calendarBox{
  position: fixed;
  bottom: 0;
  z-index: 8;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, .4);
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}


/* 隐藏 */

.hide {
  display: none;
}

/* 日历 */

.calendar {
  height: 100%;
  position: fixed;
  bottom: 0;
  z-index: 999;
}

.calendar .empty {
  flex: 1;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
