.hotel {
  height: 100%;
  width: 100%;
}

.photoShow {
  height: 180rpx;
  width: 100%;
  background: #fff;
  overflow: hidden;
  white-space: nowrap;
}

.photoShow .showLi {
  display: inline-block;
  width: 180rpx;
  height: 100%;
  margin-right: 3rpx;
}

.zoomBox {
  width: 100%;
  min-height: 500rpx;
  position: absolute;
  top: 20%;
  overflow: hidden;
  white-space: nowrap;
}

.zoomBox .zoom {
  height: auto;
}

.zoomLi {
  width: 100%;
}

.operation {
  height: 90rpx;
  font-size: 24rpx;
  color: #4d4d4d;
  padding: 0 30rpx;
}

.operation text {
  margin-right: 10rpx;
}

.starLevel {
  height: 100%;
}

.addrMap {
  height: 150rpx;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
}

.addrMap>image{
  width: 100%;
  height: 150rpx;
}

.addr {
  position: absolute;
  left: 0;
  top: 0;
  box-sizing: border-box;
  width: 508rpx;
  height: 100%;
  padding: 10rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.addr .addrcont{
  margin-bottom: 10rpx;
}

