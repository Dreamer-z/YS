/* pages/index/page/orderDetail/orderDetail.wxss */
@import "/pages/components/order/order.wxss";
.pageHead {
  height: 300rpx;
  width: 100%;
  color: #fff;
  background-color: #fc8c2c;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.orderType {
  display: flex;
  align-items: center;
  font-size: 40rpx;
}

.orderType image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 20rpx;
}

.status {
  margin-top: 30rpx;
}

.option {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}

.option button {
  box-sizing: border-box;
  width: 276rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  outline: none;
  margin: 0 20rpx;
}

.option .backIndex {
  color: #fff;
  border: 1rpx solid #fff;
  background-color: #fc8c2c;
}

.option .buyAgain {
  color: #fc8c2c;
  background-color: #fff;
}

.policy{
  color: #333;
  padding: 20rpx 30rpx;
}

.policy .title{
  margin-bottom: 20rpx;
}

.policy .content .li{
  margin-top: 20rpx;
}

.policy .cancelPolicy{
  margin-top: 20rpx;
}

.policy .checkInPolicy,
.policy .cancelPolicy{
  padding: 20rpx 30rpx;
  border: 2rpx solid #e6e6e6;
}