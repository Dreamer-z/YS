/* pages/personCenter/personCenter.wxss */

.personCenter {
  height: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.personMsg {
  height: 199rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e6e6e6;
}

.personMsg .personPhoto {
  width: 135rpx;
  height: 135rpx;
  margin-right: 30rpx;
  border-radius: 50%;
  overflow: hidden;
}

.personMsg .personPhoto image{
  width: 135rpx;
  height: 135rpx;
  border-radius: 50%;
}

.personMsg .levelName {
  flex: 1;
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: center;
}

.personMsg .levelName .level {
  font-size: 20rpx;
  margin-bottom: 10rpx;
  color: #fff;
}

.personMsg .levelName .level text {
  background-color: #fd9820;
  padding: 0 10rpx;
  border-radius: 6rpx;
}

.personMsg .levelName .name {
  font-size: 30rpx;
  color: #333;
}

.personMsg .edit {
  width: 80rpx;
  text-align: right;
  color: #b3b3b3;
}

.personMsg .edit text {
  margin-right: 20rpx;
}

.functional {
  width: 100%;
  height: 178rpx;
  display: flex;
}

.functional .mod {
  box-sizing: border-box;
  flex: 1;
  display: flex;
  height: 100%;
  padding: 30rpx 0;
  flex-direction: column;
  align-items: center;
  border-right: 1rpx solid #e6e6e6;
}

.functional .mod:nth-last-child(0) {
  border-right: 0;
}

.functional .mod .modImg {
  box-sizing: border-box;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: linear-gradient(180deg, #6a9df6 0%, #8bbdf5 100%),
                linear-gradient(#437ff8, #437ff8);
}

.functional .mod .modImg image {
  width: 100%;
  height: 100%;
}

.functional .mod .modName {
  font-size: 26rpx;
  color: #333;
}

.functional .mod .modMsg {
  font-size: 22rpx;
  color: #b3b3b3;
}

.functionalMore {
  flex: 1;
  /* height: 100%; */
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  padding: 0 30rpx;
}

.functionalMore .title {
  padding: 40rpx 0;
  display: flex;
  align-items: center;
}

.functionalMore .title image {
  width: 12rpx;
  height: 10rpx;
}

.functionalMore .list .li {
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #e6e6e6;
  font-size: 26rpx;
}

.functionalMore .list .li .icon {
  width: 60rpx;
  margin-right: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

