.amend-user-box{
  height: 100%;
  display: flex;
  flex-direction: column;
}

.amend-user {
  flex: 1;
}

.amend-user .title {
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 84rpx;
}

.amend-user input {
  box-sizing: border-box;
  height: 90rpx;
  width: 100%;
  padding: 0 30rpx;
  color: #b3b3b3;
  background-color: #fff;
  border: 1rpx solid #e6e6e6, 0, 1rpx solid #e6e6e6, 0;
}

.idcard{
  border-top: solid 1rpx #e6e6e6;
}

button.finish-big {
  margin-top: 60rpx;
  width: 100%;
  height: 90rpx;
  font-size: 34rpx;
  border-radius: 0;
  background-color: #437ff9;
  color: #fff;
}

button.cancel-big {
  margin-top: 20rpx;
}
