/* pages/components/commonUserr/commonUserr.wxss */
.common-user{
  height: 100%;
  display: flex;
  flex-direction: column;
}

.add-user{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
	color: #437ff8;
  border-top: solid 1rpx #e6e6e6;
}

.add-user image{
  height: 30rpx;
  width: 30rpx;
  margin-right: 18rpx;
}

.common-user>.title {
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 84rpx;
  display: flex;
  align-items: center;
}

.common-user-list {
  flex: 1;
  border: 1rpx solid #e6e6e6, 0, 1rpx solid #e6e6e6, 0;
  overflow-y: auto;
}

.common-user-list .common-user-li {
  box-sizing: border-box;
  width: 100%;
  height: 90rpx;
  padding: 0 30rpx;
  color: #4d4d4d;
  background-color: #fff;
}

.common-user-list .common-user-li .box {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border-bottom: 1rpx solid #e6e6e6;
  display: flex;
  align-items: center;
}

.common-user-list .common-user-li:last-of-type .box {
  border-bottom: 0;
}

.common-user-list .common-user-li .box .finish{
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}

.common-user-list .common-user-li .box .edit {
  width: 37rpx;
  height: 37rpx;
}

.common-user-list .common-user-li .box text {
  flex: 1;
  font-size: 30rpx;
}

.common-user-list .common-user-li.choose {
  color: #6a9df6;
}

.confirm {
  margin-top: 20rpx;
  width: 100%;
  height: 90rpx;
  font-size: 34rpx;
  border-radius: 0;
  background-color: #437ff9;
  color: #fff;
}
