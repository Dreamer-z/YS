/* pages/components/ysCalendar/ysCalendar.wxss */
page{
  background-color: #fff;
}

.ys-calendar{
  box-sizing: border-box;
  /* padding-top: 60rpx;
  position: relative; */
  height: 100%;
  display: flex;
  flex-direction: column;
}

.ys-calendar-week{
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  padding: 0 25rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  background-color: #f2f2f2;
  /* position: absolute;
  left:0;
  top: 0; */
}

.ys-calendar-month{
  flex: 1;
  box-sizing: border-box;
  width: 100%;
  padding: 0 25rpx;
  overflow-y:auto; 
}

.ys-calendar-week .week-item{
  flex: 1;
  color: #666;
  text-align: center;
}

.ys-calendar-week .week-item.week-day{
  color: #437ff8;
}

.ys-calendar-month .month-item .month{
  text-align: center;
  font-size: 30rpx;
	color: #333;
  height: 84rpx;
  line-height: 84rpx;
  border-bottom: solid 1rpx #f0f0f0;
}

.ys-calendar-month .month-day-container{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.ys-calendar-month .month-day-container .month-day{
  box-sizing: border-box;
  width: 100rpx;
  height: 100rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: center; */
  border-bottom: solid 1rpx #f0f0f0;
}

.ys-calendar-month .month-day-container .month-day.check{
  background-color: #437ff8;
  color: #fff;
}

.ys-calendar-month .month-day-container .month-day.active{
  background-color: rgba(106, 157, 246, .2);
  color: #808080;
}

.ys-calendar-month .month-day-container .month-day .day{
  width: 100%;
  text-align: center;
  padding-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}