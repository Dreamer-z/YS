/* pages/hotelService/page/statement/statement.wxss */
.statementLayer{
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  position: relative;
}

.statementLayer .title{
  flex: 1;
  padding: 32rpx 0;
  text-align: center;
  font-size: 28rpx;
	color: #1a1a1a;
}

.statementLayer .contentContainer{
  height: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  padding-bottom: 170rpx;
  font-size: 26rpx;
	color: #4d4d4d;
  overflow: auto;
}

.statementLayer .content .contentTitle{
  padding-top: 30rpx;
  padding-bottom: 10rpx;
}

.statementLayer .content .item{
  margin-bottom: 20rpx;
}

.statementLayer .content .item:nth-last-of-type(1){
  margin-bottom: 0;
}

.statementLayer .content:first-of-type{
  padding-bottom: 0;
}

.statementLayer .agree{
  width: 100%;
  position: absolute;
  bottom: 0;
}

.statementLayer .agree button{
  border-radius: 0 !important;
}
