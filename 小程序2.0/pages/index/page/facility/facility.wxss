/* pages/index/page/facility/facility.wxss */
@import"../../../../wxParse/wxParse.wxss";
.hide {
  display: none;
}

.opacity {
  opacity: 0;
}

.tabs {
  width: 100%;
  height: 115rpx;
  line-height: 115rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  box-shadow: 0px 2px 4px 0px rgba(178, 178, 178, 0.35);
}

.tabs .tabs-item {
  height: 100%;
  font-size: 26rpx;
  color: #4d4d4d;
}

.tabs .tabs-item .circle {
  width: 14rpx;
  height: 14rpx;
  background-color: #437ff9;
  border-radius: 50%;
  margin-right: 11rpx;
}

.facilityServer>.title, .hotelPolicy>.title,.hotel-addr>.title {
  font-size: 28rpx;
  color: #1a1a1a;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
}

.facilityServer .empty{
  height: 115rpx;
}

.facilityServer .cont {
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.facilityServer .cont .facilityLi {
  box-sizing: border-box;
  width: 25%;
  padding: 10rpx;
  color: #808080;
  text-align: center;
  display: none;
}

.facilityServer .cont .facilityLi.block {
  display: block;
}

.facilityServer .cont .facilityLi image {
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
}

.hotelPolicy {
  padding-top: 20rpx;
}

.hotelPolicy .cont {
  box-sizing: border-box;
  padding: 0 30rpx 30rpx 30rpx;
}

.hotelPolicy .cont .policyLi>.title {
  font-size: 26rpx;
  color: #b3b3b3;
  box-sizing: border-box;
  padding: 20rpx 0 10rpx 0;
}

.hotelPolicy .cont .policyLi .introduce {
  color: #333;
  line-height: 32rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.hotelPolicy .cont .policyLi .introduce .payWayList::after {
  content: "„ÄÅ";
}

.hotelPolicy .cont .policyLi .introduce .payWayList:nth-last-of-type(1)::after {
  content: "";
}

.hotelPolicy .cont .policyLi .introduce text:nth-of-type(1) {
  margin-right: 30rpx;
}

.photoDetails {
  padding-top: 20rpx;
}

.photoDetails .title {
  height: 90rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #b3b3b3;
}

.photoDetails .title .horizontalLine {
  width: 100rpx;
  height: 1px;
  background-color: #b3b3b3;
  margin: 0 40rpx;
}

.photoDetails .content {
  box-sizing: border-box;
  padding: 0 40rpx 40rpx 40rpx;
}

.photoDetails .content image {
  width: 100%;
  line-height: 36rpx;
  color: #333;
  margin: 10rpx 0;
}

.hotel-addr{
  padding-bottom: 150rpx;
}

.watch-room-type{
  width: 200rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #437ff9;
	border-radius: 45rpx;
  border:solid 1rpx #e6e6e6;
  font-size: 32rpx;
	color: #fff;
  position: fixed;
  bottom: 30rpx;
  left: calc(50% - 100rpx);
}

