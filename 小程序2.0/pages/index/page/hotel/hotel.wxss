/* pages/index/page/hotel/hotel.wxss */

.hotel {
  height: 100%;
  width: 100%;
}

.hotel .hotel-introduce {
  position: relative;
  box-sizing: border-box;
  padding-bottom: 285rpx;
}

.hotelPhotoList {
  position: relative;
  height: 415rpx;
}

.hotelPhoto {
  height: 415rpx;
  width: 100%;
}

.hotelPhoto swiper-item image {
  height: 100%;
  width: 100%;
}

.hotelPhotoList .hotelPhotoIndex {
  position: absolute;
  right: 30rpx;
  bottom: 40rpx;
  z-index: 9;
  color: #fff;
}

.hotel-msg {
  width: 100%;
  height: 300rpx;
  position: absolute;
  top: 400rpx;
  z-index: 9;
}

.hotel-msg .name-operation {
  box-sizing: border-box;
  height: 147rpx;
  padding: 36rpx 30rpx;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
}

.hotel-msg .name-operation .name {
  padding-bottom: 20rpx;
}

.hotel-msg .name-operation .name .hotel-name {
  font-size: 32rpx;
  color: #1a1a1a;
}

.hotel-msg .name-operation .name .hotel-details {
  box-sizing: border-box;
  padding: 8rpx 0;
  font-size: 24rpx;
  color: #b3b3b3;
}

.hotel-msg .name-operation .name .hotel-details .icon {
  width: 8rpx;
  height: 17rpx;
  margin-left: 17rpx;
}

.operation {
  font-size: 24rpx;
  color: #4d4d4d;
}

.operation text {
  margin-right: 10rpx;
}

.starLevel {
  height: 100%;
}

.addrMap {
  box-sizing: border-box;
  height: 153rpx;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
}

.addrMap>image {
  width: 100%;
  height: 150rpx;
}

.addr {
  position: absolute;
  left: 0;
  top: 0;
  box-sizing: border-box;
  width: 508rpx;
  height: 100%;
  padding: 10rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #4d4d4d;
}

.addr .addrcont {
  margin-bottom: 10rpx;
}

.calendarValue {
  margin-top: 20rpx;
  width: 100%;
  height: 110rpx;
  display: flex;
  align-items: center;
  align-content: space-around;
  border-bottom: 1rpx solid #e6e6e6;
  text-align: center;
}

.calendarValue .check{
  width: 305rpx;
}

.calendarValue .check .title {
  font-size: 22rpx;
  color: #b3b3b3;
  margin-bottom: 17rpx;
}

.calendarValue .check .time-box .date {
  font-size: 30rpx;
  color: #333;
}

.calendarValue .check .time-box .week {
  font-size: 22rpx;
  color: #666;
  margin-left: 10rpx;
}

.calendarValue .night{
  width: 140rpx;
}

.calendarValue .night .line {
  width: 31rpx;
  height: 1rpx;
  background-color: #e6e6e6;
}

.calendarValue .night .night-number {
  width: 90rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  border: solid 1rpx #437ff9;
  font-size: 22rpx;
  color: #437ff9;
  margin: 0 4rpx;
}

.roomList {
  background-color: #fff;
}

.roomList .list {
  /* height: 585rpx; */
  margin-bottom: 30rpx;
  overflow: hidden;
}

.roomList .list.choose {
  height: auto;
}

.roomList .showmore {
  height: 97rpx;
  line-height: 97rpx;
  text-align: center;
  border-top: 1rpx solid #e6e6e6;
  border-bottom: 1rpx solid #e6e6e6;
  color: #808080;
}

.roomList .room {
  border-bottom: 1rpx solid #e6e6e6;
  overflow: hidden;
}

.roomList .room .intro {
  box-sizing: border-box;
  width: 100%;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  align-content: center;
}

.roomList .room .intro .navigate {
  flex: 1;
  height: 100%;
  width: 435rpx;
  display: flex;
  align-items: center;
  align-content: center;
}

.roomList .room .intro .photo {
  width: 200rpx;
  height: 155rpx;
  border-radius: 4rpx;
}

.roomList .room .intro .msg {
  box-sizing: border-box;
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 290rpx;
  padding-left: 15rpx;
  padding-right: 10rpx;
}

.roomList .room .intro .msg .remind {
  margin-top: 10rpx;
}

.roomList .room .intro .msg .type {
  font-size: 30rpx;
  color: #080f1a;
}

.roomList .room .intro .msg .include, .roomList .room .intro .msg .remind {
  font-size: 22rpx;
  color: #808080;
}

.roomList .room .intro .basePrice {
  justify-content: flex-start;
}

.roomList .room .intro .basePrice .symbol {
  margin-left: 0;
}

.roomList .room .intro .down {
  height: 110rpx;
  width: 110rpx;
  border-radius: 8rpx;
  border: solid 1px #437ff9;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.roomList .room .intro .down.disabled{
  opacity: .4;
}

.roomList .room .intro .down button {
  width: 100%;
  height: 60rpx;
  padding-left: 4px;
  padding-right: 4px;
  line-height: 60rpx;
  font-size: 28rpx;
  border-radius: 0;
}

.roomList .room .intro .down .room-number-msg {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fc8c2c;
}

.roomList .room .roomDetails {
  height: 0;
  width: 100%;
}

.roomList .room .roomDetails.true {
  height: 444rpx;
}

.roomList .room .roomDetails .li {
  box-sizing: border-box;
  padding: 0 30rpx;
  height: 148rpx;
  border-top: 1rpx solid #e6e6e6;
  display: flex;
  align-items: center;
}

.roomList .room .roomDetails .li .partone {
  flex: 4;
}

.roomList .room .roomDetails .li .partone .pricetype {
  font-size: 26rpx;
  color: #080f1a;
}

.roomList .room .roomDetails .li .partone .breakfast {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #b3b3b3;
}

.roomList .room .roomDetails .li .parttwo {
  flex: 2;
  margin-right: 20rpx;
}

.roomList .room .roomDetails .li .parttwo .basePrice {
  justify-content: center;
}

.roomList .room .roomDetails .li .parttwo .reduced {
  text-align: center;
  font-size: 20rpx;
  color: #b3b3b3;
}

.roomList .room .roomDetails .li .partthree {
  flex: 1;
}

/* 隐藏 */

.hide {
  display: none;
}

/* 日历 */

.calendar {
  height: 100%;
  position: fixed;
  bottom: 0;
  z-index: 999;
}

.calendar .empty {
  flex: 1;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

/* 房间详情 */

.room-details {
  box-sizing: border-box;
}

.room-details .empty {
  padding-top: 110rpx;
}

.room-details .content {
  height: 100%;
}

.room-details .content .content-head {
  box-sizing: border-box;
  height: 88rpx;
  width: 100%;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #1a1a1a;
}

.room-details .content .content-head .closeRoomDetails{
  padding: 8rpx 15rpx;
}

.room-details .content .content-head .closeRoomDetailsPopup {
  width: 24rpx;
  height: 24rpx;
}

.room-details .content .content-main {
  overflow: auto;
}

.room-details .content .roomPhotoList {
  position: relative;
}

.room-details .content .roomPhoto {
  height: 415rpx;
  width: 100%;
}

.room-details .content .roomPhoto swiper-item image {
  height: 100%;
  width: 100%;
}

.room-details .content .roomPhotoList .roomPhotoIndex {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  color: #fff;
}

.room-details .content .room-collocate {
  box-sizing: border-box;
  padding: 37rpx 39rpx 0 39rpx;
  font-size: 26rpx;
}

.room-details .content .room-collocate .item {
  width: 50%;
  margin-bottom: 20rpx;
  color: #808080;
}

.room-details .content .room-collocate .item text {
  margin-left: 21rpx;
  color: #4d4d4d;
}

.room-details .content .room-collocate .room-facility.scale {
  height: 0;
  overflow: hidden;
}

.room-details .content .room-collocate .room-facility text {
  color: #4d4d4d;
}

.room-details .content .room-collocate .room-facility text:nth-of-type(1) {
  color: #808080;
}

.room-details .content .room-collocate .room-facility text::after{
  content: "、";
  padding-right:4rpx;
}

.room-details .content .room-collocate .room-facility text:nth-last-of-type(1):after{
  content: "。";
  padding-right:0;
}

.room-details .content .room-collocate .get-more-box {
  margin-top: 36rpx;
  padding-bottom: 21rpx;
  border-bottom: solid 1rpx #e6e6e6;
}

.room-details .content .room-collocate .get-more-box .get-more {
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  border: solid 1rpx #437ff9;
  text-align: center;
  font-size: 24rpx;
  color: #437ff9;
  margin: 0 auto;
}

.room-details .content .room-collocate .get-more-box .get-more .icon {
  width: 20rpx;
  height: 12rpx;
  margin-left: 16rpx;
}

.room-details .content .content-main .part-box {
  box-sizing: border-box;
  padding: 0 30rpx;
}

.room-details .content .content-main .part-box .part {
  font-size: 26rpx;
  color: #4d4d4d;
  padding: 30rpx 0;
  border-bottom: solid 1rpx #e6e6e6;
}

.room-details .content .content-main .part-box .part:nth-last-of-type(1) {
  border-bottom: 0;
}

.room-details .content .content-main .part-box .part .title {
  font-size: 28rpx;
  color:#fc8c2c;
  margin-bottom: 20rpx;
}

.room-details .content .content-main .part-box .part .container .item {
  margin-bottom: 20rpx;
}

.room-details .content .content-main .part-box .part .container .item:nth-last-of-type(1) {
  margin-bottom: 0;
}

.room-details .content .content-foot {
  width: 750rpx;
  height: 98rpx;
  line-height: 98rpx;
  background-color: #fff;
  box-shadow: 0rpx -2rpx 4rpx 0rpx rgba(178, 178, 178, 0.35);
}

.room-details .content .content-foot .room-price {
  box-sizing: border-box;
  padding-left: 28rpx;
  flex: 1;
  height: 100%;
  font-size: 24rpx;
	color: #b3b3b3;
}

.room-details .content .content-foot .room-price .price-num{
  font-size: 40rpx;
	color: #f4703c;
  margin-left: 20rpx;
}

.room-details .content .content-foot .room-price .symbol{
  font-size: 20rpx;
	color: #ff4b13;
}

.room-details .content .content-foot .goPay {
  width: 220rpx;
  height: 100%;
  background-color: #437ff8;
  color: #fff;
  font-size: 34rpx;
  text-align: center;
}


.distribute{
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  padding-top: 90rpx;
  background-color: rgba(0, 0, 0, 0.8);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 199;
}

.distribute .content{
  position: relative;
}

.distribute .content .img{
  width: 650rpx;
  height: 882rpx;
}

.distribute .content .tap{
  width: 420rpx;
  height: 100rpx;  
  position: absolute;
  right: calc(50% - 210rpx);
  top: 685rpx;
}

.distribute .content .close{
  width: 55rpx;
  height: 55rpx;
  position: absolute;
  right: 52rpx;
  top: 0;
}