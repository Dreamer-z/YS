.mask {
  box-sizing: border-box;
  padding-bottom: 98rpx;
}

.maskBlock {
  display: flex;
  flex-direction: column;
}

.mask .detailMsg {
  height: 400rpx;
  padding: 30rpx 0;
}

.mask .detailMsg .head {
  box-sizing: border-box;
  font-size: 30rpx;
  color: #333;
  padding: 0 30rpx;
  height: 50rpx;
  display: flex;
  align-items: flex-end;
}

.mask .detailMsg .head .payType, .mask .detailMsg .head .basePrice {
  width: auto;
}

.mask .detailMsg .head .member{
  flex: 1;
  font-size: 20rpx;
	color: #ff4a11;
  margin-left: 20rpx;
}

.mask .detailMsg .detailList {
  color: #b3b3b3;
  height: 350rpx;
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
}

.mask .detailMsg .detailList .li {
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  margin-top: 15rpx;
}

.mask .detailMsg .detailList .li .line {
  flex: 1;
  height: 1rpx;
  margin: 0 30rpx;
  border-top: 1rpx dashed #b3b3b3;
}

.columnOne.person .icon {
  padding: 0;
}

.columnOne.store .icon {
  width: 21rpx;
  height: 100%;
}

.columnOne .icon image.person{
  width: 46rpx;
	height: 46rpx;
}

.columnOne .icon image.down {
  width: 21rpx;
	height: 11rpx;
}

.columnOne:nth-of-type(2),.columnOne:nth-of-type(5){
  margin-top: 20rpx;
}

.storeTime {
  box-sizing: border-box;
  padding: 29rpx;
  height: 0;
  width: 100%;
  position: absolute;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.storeTime.show {
  height: auto;
}

.storeTime .title {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 28rpx;
}

.storeTime .remind {
  color: #999;
  margin-bottom: 28rpx;
}

.storeTime .timeList {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.storeTime .timeList .time {
  width: 220rpx;
  height: 70rpx;
  border-radius: 4rpx;
  border: 2rpx solid #e6e6e6;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  margin-bottom: 14rpx;
  color: #333;
}

.storeTime .timeList .time.choose {
  border: 2rpx solid #6a9df6;
}

.storeTime .timeList .time .timeNum {
  width: 100%;
  text-align: center;
}

.storeTime .timeList .time .guarantee {
  font-size: 20rpx;
  color: #979797;
}

.arriveTime {
  z-index: 199;
}
