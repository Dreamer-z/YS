/* pages/index/page/reservations/reservations.wxss */
@import "../../../components/wallet/wallet.wxss";
.box{
  height: 100%;
  width: 100%;
}

.reserve-msg {
  width: 100%;
  background-color: #437ff8;
}

.reserve-msg .content {
  width: 690rpx;
  margin: 0 auto;
  background-color: #fff;
  box-shadow: 0 3rpx 4rpx 0 rgba(229, 229, 229, 0.3);
  border-radius: 9rpx 9rpx 0 0;
  font-size: 24rpx;
  overflow: hidden;
}

.reserve-msg .content .content-top, .reserve-msg .content .content-bottom {
  box-sizing: border-box;
  padding: 20rpx 36rpx;
}

.reserve-msg .content .content-top .room-type {
  font-size: 28rpx;
  color: #1a1a1a;
}

.reserve-msg .content .content-top .date {
  color: #4d4d4d;
  margin-top: 8rpx;
}

.reserve-msg .content .content-top .other {
  color: #808080;
  margin-top: 8rpx;
}

.reserve-msg .content .content-bottom {
  background-color: #f6f8fd;
}

.reserve-msg .content .content-bottom .rules:nth-of-type(1){
  color: #fc8c2c;
}

.reserve-msg .content .content-bottom .rules:nth-of-type(1)::before{
  content: "·";
  font-weight: bolder;
  padding-right: 8rpx;
}

.reserve-msg .content .content-bottom .rules:nth-of-type(2){
  color: #4d4d4d;
  margin-top: 8rpx;
}


.reserve-msg .content .content-bottom .rules:nth-of-type(2)::before{
  content: "·";
  font-weight: bolder;
  padding-right: 8rpx;
}

.checkInInformation{
  margin-top: 20rpx;
}

.checkInInformation .roomNumber text {
  display: block;
  width: 100%;
}

.checkInInformation .checkInPerson, .checkInInformation .checkInIdCard {
  flex-wrap: wrap;
}

.checkInInformation .roomNumber {
  width: 450rpx;
}

.checkInInformation .roomNumber .count input {
  width: 49rpx;
  height: 49rpx;
}

.warm-prompt {
  padding: 20rpx 30rpx 118rpx 30rpx;
  color: #b3b3b3;
  line-height: 32rpx;
}

.warm-prompt .item{
  margin-bottom: 22rpx;
}

.warm-prompt .item:nth-last-of-type(1){
  margin-bottom: 0;
}


.warm-prompt .item .icon{
  width: 30rpx;
	height: 30rpx;
  margin-right: 8rpx;
}

.payFor {
  box-sizing: border-box;
  height: 98rpx;
  width: 100%;
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  z-index: 100;
}

.payFor .priceDetail {
  box-sizing: border-box;
  height: 98rpx;
  flex: 1;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #e6e6e6;
  border-bottom: 1rpx solid #e6e6e6;
  color: #b3b3b3;
}

.payFor .priceDetail>.txt {
  width:60rpx;
  margin-right: 20rpx;
}

.payFor .priceDetail .detail {
  height: 100%;
  display: flex;
  align-items: center;
}

.payFor .priceDetail .detail .txt {
  width: 60rpx;
  margin-right: 10rpx;
  color: #666;
}

.payFor .pay {
  width: 240rpx;
  height: 100%;
  font-size: 34rpx;
  background-color: #437ff8;
  color: #fff;
  border-radius: 0;
  padding: 0;
}

