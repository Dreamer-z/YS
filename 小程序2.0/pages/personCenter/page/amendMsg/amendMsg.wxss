/* pages/personCenter/page/amendMsg/amendMsg.wxss */
.box {
  height: 100%;
  width: 100%;
}

.person-msg {
  box-sizing: border-box;
  padding: 33rpx;
}

.person-msg .photo {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  overflow: hidden;
}

.person-msg .name {
  font-size: 28rpx;
  color: #333;
  margin-left: 28rpx;
}

.person-msg .tabs {
  width: 160rpx;
  height: 40rpx;
  line-height: 36rpx;
  text-align: center;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: solid 2rpx #fc8c2c;
  color: #fc8c2c;
}

.member-msg {
  padding-bottom: 110rpx;
  margin-top: 20rpx;
  position: relative;
}

.part-title {
  box-sizing: border-box;
  font-size: 24rpx;
  color: #b3b3b3;
  padding: 39rpx 35rpx 10rpx 35rpx;
}

.msg-box{
  box-sizing: border-box;
  padding: 0 35rpx;
}

.msg-box .item {
  padding: 26rpx 0;
  font-size: 28rpx;
  color: #333;
  border-bottom: solid 1rpx #e6e6e6;
  display: flex;
  align-items: center;
}

.msg-box .item .item-title {
  width: 180rpx;
}

.msg-box .item .item-msg {
  color: #999;
  flex: 1;
}

.msg-box .item button{
  width: 190rpx;
	height: 60rpx;
  font-size: 24rpx;
	color: #fff;
	background-color: #437ff9;
	border-radius: 8rpx;
}

.amend {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  color: #fff;
  background-color: #437ff9;
  position: absolute;
  bottom: 0;
}