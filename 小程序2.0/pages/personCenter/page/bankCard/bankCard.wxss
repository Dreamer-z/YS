/* pages/personCenter/page/bankCard/bankCard.wxss */
.bank-card{
  height: 100%;
  width: 100%;
}

.container{
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  padding: 30rpx;
  background-color: #363d47;
  overflow-y:auto; 
}

.container .item{
  width: 100%;
	height: 200rpx;
  font-size: 28rpx;
	border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.container .item .section{
  width: calc(100% + 126rpx);
  height: 200rpx;
  overflow: hidden;
  display: flex;
}

.container .item .section .box{
  width: 690rpx;
  height: 100%;
  box-sizing: border-box;
  padding: 30rpx 53rpx;
	background-color: #fff;
  display: flex;
}

.container .item .section .box image{
  width: 72rpx;
	height: 72rpx;
}

.container .item .card-msg{
  flex: 1;
  margin-left: 25rpx;
}

.container .item .card-msg .name{
  font-size: 32rpx;
}

.container .item .card-msg .type{
  color: #666;
}

.container .item .card-msg .num{
  font-size: 36rpx;
  margin-top: 6rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.container .item .del{
  width: 0;
  height: 100%;
  line-height: 200rpx;
  text-align: center;
  background-color: #f16666;
  color: #fff;
}

.container .item .del.show{
  width: 126rpx;
}

.add-card{
  width: 250rpx;
	height: 90rpx;
  color: #437ff9;
	background-color: #fff;
	border-radius: 45rpx;
  position: fixed;
  left: calc(50% - 125rpx);
  bottom: 40rpx;
}

.add-card image{
  width: 26rpx;
	height: 26rpx;
  margin-right: 5rpx;
}
