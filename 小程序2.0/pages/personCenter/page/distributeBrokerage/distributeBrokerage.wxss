/* pages/personCenter/page/distributeBrokerage/distributeBrokerage.wxss */
.brokerage{
  height: 100%;
}

.head{
  width: 750rpx;
	height: 306rpx;
  position: relative;
}

.head .bg{
  width: 100%;
  height: 100%;
}

.head .content{
  width: 100%;
  height: 100%;
  font-size: 26rpx;
	color: #fff;
  position: absolute;
  top: 0;
  left: 0;
}

.head .content .amount{
	font-size: 28rpx;
  margin-top: 10rpx;
}

.head .content .amount text{
	font-size: 70rpx;
}

.main{
  overflow-y: auto;
}

.main .item{
  border-top: solid 10rpx #e6e6e6;
  background: #fff;
}

.main .item .title{
  box-sizing: border-box;
  padding: 0 30rpx;
  width: 100%;
  height: 101rpx;
  line-height: 100rpx;
  border-bottom: solid 1rpx #e6e6e6;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.main .item .title image{
  width: 36rpx;
	height: 36rpx;
  margin-right: 14rpx;
}

.main .item .section{
  width: 100%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding-top: 45rpx;
}

.main .item .section .child-item{
  box-sizing: border-box;
  width: 50%;
  padding: 0 45rpx;
  margin-bottom: 45rpx;
}

.main .item .section .child-item .amount{
	font-size: 32rpx;
	color: #1a1a1a;
}

.main .item .section .child-item .remind{
	color: #666;
  margin-top: 10rpx;
}