/* pages/personCenter/page/popularizeDetails/popularizeDetails.wxss */
page{
  background-color: #fff;
}

.popularize-details{
  box-sizing: border-box;
  width: 100%;
  /* height: 100%;
  padding: 20rpx 0; */
  background-color: #fff;
  overflow-y: auto;
}

.share-msg{
  width: 300px;
  height: 450px;
  margin: 0 auto;
  border: solid 1px #e6e6e6;
}

.option{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 50rpx;
}

.option button{
  width: 250rpx;
	height: 70rpx;
  line-height: 70rpx;
	border-radius: 35rpx;
  font-size: 30rpx;
	color: #fff;
  background-color: #437ff9;
}

.save-img{
  margin-left: 70rpx;
}

.ops{
  font-size: 26rpx;
  padding: 36rpx 0;
  text-align: center;
}

.popup .content{
  width: 500rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #fff;
}

.popup .content .section{
  box-sizing: border-box;
  padding: 30rpx;
  overflow: hidden;
  white-space: pre-wrap;
}

.popup .content .op{
  width: 100%;
  height: 91rpx;
  text-align: center;
  color: #666;
}

.popup .content .op .cancel{
  height: 90rpx;
  line-height: 90rpx;
  border-top: solid 1rpx #e6e6e6;
}

.popup .content .op .copy{
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  background-color: #437ff9;
  border-top: solid 1rpx #437ff9;
}

.hide{
  display: none;
}