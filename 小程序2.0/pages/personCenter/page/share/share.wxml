<!--pages/personCenter/page/share/share.wxml-->
<view class='share-box height100 flex flex-vertical flex-align-center'>
  <image class='qr-code' src='{{qrcode}}' bindtap='preview'></image>
  <text class='remind-text'>点击保存 {{name}}小程序二维码</text>
  <view class='share'>
    <button class='share-btn' open-type='share'></button>
    <image src='/images/wx.png'></image>
  </view>
  <view class='remind'>点击分享</view>
</view>