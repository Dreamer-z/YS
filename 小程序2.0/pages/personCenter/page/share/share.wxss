/* pages/personCenter/page/share/share.wxss */

.share-box {
  box-sizing: border-box;
  padding: 0 30rpx;
  padding-top: 150rpx;
}

.share-box .qr-code {
  width: 545rpx;
  height: 537rpx;
  margin-bottom: 40rpx;
}

.share-box .remind {
  font-size: 28rpx;
}

.share-box .remind-text {
  width: 100%;
  white-space:pre-wrap;
  text-align: center;
  margin-bottom: 180rpx;
  font-size: 28rpx;
}

.share-box .share {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  padding: 0;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
}

.share-box .share image {
  width: 105rpx;
  height: 105rpx;
  border-radius: 50%;
}

.share-box .share .share-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}
