/* pages/personCenter/page/withdrawPages/withdrawPages.wxss */

.withdraw-pages {
  box-sizing: border-box;
  padding: 30rpx;
}

.container {
  width: 100%;
  border-radius: 8rpx;
  overflow: hidden;
}

.container .bank-card {
  box-sizing: border-box;
  padding: 37rpx 30rpx;
  background-color: rgba(67, 127, 248, 0.03);
  font-size: 26rpx;
  color: #999;
}

.container .bank-card .title {
  font-size: 28rpx;
  color: #333;
  width: 200rpx;
}

.container .bank-card .content {
  padding-left: 46rpx;
  position: relative;
}

.container .bank-card .content image {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.container .bank-card .content .bank {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.container .bank-card .more {
  margin-top: 10rpx;
}

.container .amount {
  box-sizing: border-box;
  width: 100%;
  padding: 52rpx 30rpx 69rpx 30rpx;
  border-bottom: solid 1rpx #e6e6e6;
}

.container .amount .title {
  font-size: 28rpx;
}

.container .amount .amount_num {
  font-size: 54rpx;
  margin-top: 66rpx;
}

.container .amount .amount_num input {
  height: 100rpx;
  font-size: 90rpx;
}

.container .hotel-msg {
  box-sizing: border-box;
  padding: 22rpx 30rpx;
}

.container .hotel-msg .hotel {
  font-size: 26rpx;
}

.container .hotel-msg .hotel image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 14rpx;
}

.container .hotel-msg .can-withdraw-amount {
  font-size: 26rpx;
  margin-top: 15rpx;
}

.container .hotel-msg .can-withdraw-amount .num {
  color: #999;
}

.container .hotel-msg .can-withdraw-amount .all-withdraw {
  color: #437ff8;
}

.withdraw {
  margin-top: 47rpx;
}

.finish-big {
  border-radius: 6rpx;
}

.hide {
  display: none;
}

.bank-content {
  width: 100%;
  height: 640rpx;
}

.bank-content .content-head {
  box-sizing: border-box;
  padding: 52rpx 30rpx 36rpx 30rpx;
  font-size: 36rpx;
  color: #4d4d4d;
  text-align: center;
  position: relative;
}

.bank-content .content-head .close {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: calc(50% - 16rpx);
  right: 30rpx;
}

.bank-content .content-main {
  box-sizing: border-box;
  padding: 0 30rpx;
  overflow-y: auto;
}

.bank-content .content-main .item {
  box-sizing: border-box;
  padding: 26rpx 0;
  display: flex;
  align-items: center;
  border-bottom: solid 1rpx #e6e6e6;
  font-size: 28rpx;
  color: #333;
}

.bank-content .content-main .item .icon {
  width: 44rpx;
  height: 44rpx;
}

.bank-content .content-main .item .bank-name {
  margin: 0 21rpx;
}

.bank-content .content-foot{
  box-sizing: border-box;
  padding: 45rpx 30rpx;
	font-size: 28rpx;
	color: #437ff9;
}

.bank-content .content-foot image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 11rpx;
}


