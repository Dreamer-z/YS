/* pages/personCenter/personCenter.wxss */

.personCenter {
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}

.personMsg {
  height: 263rpx;
  position: relative;
}

.personMsg .unit-bg {
  height: 100%;
  width: 100%;
}

.personMsg .msg {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.personMsg .personPhoto {
  width: 145rpx;
  height: 145rpx;
  margin-right: 30rpx;
  border-radius: 50%;
  overflow: hidden;
}

.personMsg .personPhoto image {
  width: 135rpx;
  height: 135rpx;
  border-radius: 50%;
}

.personMsg .levelName {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #fff;
  margin-bottom: 25rpx;
}

.personMsg .levelName .level {
  font-size: 20rpx;
  margin-bottom: 10rpx;
  color: #fff;
}

.personMsg .levelName .level text {
  background-color: #fd9820;
  padding: 0 10rpx;
  border-radius: 6rpx;
}

.personMsg .levelName .name {
  font-size: 30rpx;
  color: #333;
}

.personMsg .edit {
  width: 80rpx;
  text-align: right;
  color: #b3b3b3;
}

.personMsg .edit text {
  margin-right: 20rpx;
}

.personMsg .member-level, .personMsg .member-level-bg {
  width: 177rpx;
  height: 60rpx;
  position: absolute;
  top: calc(50% - 30rpx);
  right: 0;
}

.personMsg .member-level {
  z-index: 99;
  color: #fff;
  font-size: 24rpx;
}

.personMsg .member-level-bg {
  z-index: 90;
}

.personMsg .member-level .icon {
  width: 29rpx;
  height: 25rpx;
  margin-right: 11rpx;
}

.functional {
  height: 164rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.functional .line {
  width: 2rpx;
  height: 62rpx;
  background-color: #c8d9fb;
}

.functional .mod {
  box-sizing: border-box;
  flex: 1;
  display: flex;
  height: 100%;
  padding: 30rpx 0;
  flex-direction: column;
  align-items: center;
}

.functional .mod:nth-last-child(0) {
  border-right: 0;
}

.functional .mod .modImg {
  box-sizing: border-box;
  width: 70rpx;
  height: 70rpx;
  padding: 10rpx;
}

.functional .mod .modImg image {
  width: 100%;
  height: 100%;
}

.functional .mod .modName {
  font-size: 26rpx;
  color: #333;
}

.functional .mod .modMsg {
  font-size: 22rpx;
  color: #b3b3b3;
}

.member {
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #4d4d4d;
}

.member.list .li {
  width: 100%;
  height: 100rpx;
  position: relative;
}

.member.list .li:nth-of-type(1) {
  border-bottom: solid 1rpx #e6e6e6;
}

.member.list .li:nth-last-of-type(1) {
  border-bottom: 0;
}

.member .mini-title {
  background-color: #f3ecd2;
  border-radius: 15rpx;
  font-size: 20rpx;
  color: #a0821a;
  display: inline-block;
  width: 278rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  margin-left: 30rpx;
  position: absolute;
  top: calc(50% - 15rpx);
  left: 20%;
}

.member .msg {
  font-size: 22rpx;
  color: #4d4d4d;
  justify-content: flex-end;
  margin-right: 20rpx;
}

.member .msg text {
  color: #fc8c2c;
}

.member.list .li .icon,.member.hotel-service .li .icon {
  width: 60rpx;
  margin-right: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.member.list .li .icon image{
  width: 41rpx;
  height: 41rpx;
}

.member .li.member-center .icon image {
  width: 41rpx;
  height: 35rpx;
}

.member .li.distribute .icon image {
  width: 39rpx;
  height: 39rpx;
}

.member.hotel-service .li {
  width: 100%;
  height: 100rpx;
}

.member.hotel-service .li .icon image:nth-of-type(1) {
  width: 50rpx;
  height: 50rpx;
}

.functionalMore .list .li .icon {
  width: 60rpx;
  margin-right: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.functionalMore {
  flex: 1;
  /* height: 100%; */
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  padding: 0 30rpx;
}

.functionalMore .title {
  padding: 40rpx 0;
  display: flex;
  align-items: center;
}

.functionalMore .title image {
  width: 12rpx;
  height: 10rpx;
}

.functionalMore .list .li {
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #e6e6e6;
  font-size: 26rpx;
}

.functionalMore .list .li .icon {
  width: 60rpx;
  margin-right: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* .functionalMore .list .li:nth-of-type(1) .icon image{
  width: 39rpx;
  height: 41rpx;
}

.functionalMore .list .li:nth-of-type(2) .icon image{
  width: 41rpx;
  height: 32rpx;
} */

.functionalMore .list .li:nth-of-type(1) .icon image {
  width: 43rpx;
  height: 36rpx;
}

.functionalMore .list .li:nth-of-type(2) .icon image {
  width: 34rpx;
  height: 35rpx;
}

.functionalMore .list .li:nth-of-type(3) .icon image {
  width: 45rpx;
  height: 45rpx;
}

.functionalMore .list .li .content {
  flex: 1;
  width: 100%;
  color: #4c4c4c;
}

.functionalMore .list .li .remind ,.hotel-service .li .remind{
  flex: 1;
  width: 100%;
  text-align: right;
  font-size: 22rpx;
  color: #ccc;
}

.functionalMore .list .li .more,.hotel-service .li .more{
  margin-left: 20rpx;
}

.hide {
  display: none;
}

.popup {
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.8);
  padding: 0 30rpx;
}

.distribute-center {
  margin: 0 auto;
  margin-top: 568rpx;
  background-color: #fff;
  height: 80rpx;
  width: 690rpx;
  border-radius: 40rpx;
  position: relative;
}

.distribute-center .icon {
  width: 60rpx;
  margin-right: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.distribute-center .icon image {
  width: 39rpx;
  height: 39rpx;
}

.distribute-center .msg {
  font-size: 22rpx;
  color: #4d4d4d;
  justify-content: flex-end;
  margin-right: 20rpx;
}

.distribute-center .more {
  margin-right: 8rpx;
}

.distribute-center .msg text {
  color: #fc8c2c;
}

.distribute-center .img {
  height: 545rpx;
  width: 614rpx;
  position: absolute;
  top: -548rpx;
  left: calc(50% - 280rpx);
}

.distribute-center .close {
  height: 75rpx;
  width: 145rpx;
  position: absolute;
  top: -350rpx;
  left: 170rpx;
}
